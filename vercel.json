{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",

  "functions": {
    "app/api/admin/audit-logs/export/route.ts": { "maxDuration": 30, "memory": 1024 },
    "app/api/cron/check-milestones/route.ts": { "maxDuration": 60, "memory": 1024 },
    "app/api/cron/sync-users/route.ts": { "maxDuration": 300, "memory": 1024 },
    "app/api/**/route.ts": { "maxDuration": 15, "memory": 1024 }
  },
  "crons": [
    {
      "path": "/api/cron/check-milestones",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/sync-users",
      "schedule": "0 2 * * *"
    }
  ],
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Service-Worker-Allowed", "value": "/" }
      ]
    }
  ],
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": false
  }
}

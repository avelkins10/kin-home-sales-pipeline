# Kin Home Sales Pipeline - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# QUICKBASE CONFIGURATION
# =============================================================================
QUICKBASE_REALM=kin.quickbase.com
QUICKBASE_TOKEN=your_quickbase_token_here
QUICKBASE_APP_ID=br9kwm8bk
QUICKBASE_TABLE_PROJECTS=br9kwm8na
QUICKBASE_TABLE_ADDERS=bsaycczmf
QUICKBASE_TABLE_TASKS=br9kwm8q9

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# =============================================================================
# AUTHENTICATION
# =============================================================================
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://your-domain.com

# =============================================================================
# AI ASSISTANT CONFIGURATION
# =============================================================================
# OpenAI API Key for AI Hold Resolution Assistant
OPENAI_API_KEY=sk-your_openai_api_key_here

# AI Feature Flags (optional - defaults to enabled)
FEATURE_AI_HOLD_ANALYSIS=true
FEATURE_AI_BATCH_ANALYSIS=true
FEATURE_AI_FEEDBACK=true
FEATURE_AI_SMART_NOTIFICATIONS=false
FEATURE_AI_PATTERN_ANALYSIS=false

# AI Cost Controls (optional)
AI_DAILY_BUDGET_LIMIT=50
AI_MAX_COST_PER_REQUEST=0.01

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Optional: External analytics service
ANALYTICS_ENDPOINT=https://your-analytics-service.com/api/events
ANALYTICS_API_KEY=your_analytics_api_key

# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEPLOYMENT
# =============================================================================
NODE_ENV=production
VERCEL_URL=your-vercel-url.vercel.app

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Only needed for local development
NEXT_PUBLIC_APP_URL=http://localhost:3000
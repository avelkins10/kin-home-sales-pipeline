# Kin Home Sales Pipeline - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# QUICKBASE CONFIGURATION
# =============================================================================
QUICKBASE_REALM=kin.quickbase.com
QUICKBASE_TOKEN=your_quickbase_token_here
QUICKBASE_APP_ID=br9kwm8bk
QUICKBASE_TABLE_PROJECTS=br9kwm8na
QUICKBASE_TABLE_ADDERS=bsaycczmf
QUICKBASE_TABLE_TASKS=br9kwm8q9

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# =============================================================================
# AUTHENTICATION
# =============================================================================
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://your-domain.com

# =============================================================================
# AI ASSISTANT CONFIGURATION
# =============================================================================
# OpenAI API Key for AI Hold Resolution Assistant
OPENAI_API_KEY=sk-your_openai_api_key_here

# AI Feature Flags (optional - defaults to enabled)
FEATURE_AI_HOLD_ANALYSIS=true
FEATURE_AI_BATCH_ANALYSIS=true
FEATURE_AI_FEEDBACK=true
FEATURE_AI_SMART_NOTIFICATIONS=false
FEATURE_AI_PATTERN_ANALYSIS=false

# AI Cost Controls (optional)
AI_DAILY_BUDGET_LIMIT=50
AI_MAX_COST_PER_REQUEST=0.01

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Optional: External analytics service
ANALYTICS_ENDPOINT=https://your-analytics-service.com/api/events
ANALYTICS_API_KEY=your_analytics_api_key

# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEPLOYMENT
# =============================================================================
NODE_ENV=production
VERCEL_URL=your-vercel-url.vercel.app

# =============================================================================
# VERCEL CRON CONFIGURATION
# =============================================================================
# Vercel Cron Secret (for scheduled jobs)
# Generate a secure random string for production:
# openssl rand -base64 32
# This secret is used to authenticate Vercel Cron requests
CRON_SECRET=your-random-secret-here-change-in-production

# =============================================================================
# SLACK NOTIFICATIONS
# =============================================================================

# Slack webhook URL for sending sync failure notifications
# Create a webhook at: https://api.slack.com/messaging/webhooks
# Leave empty to disable Slack notifications
SLACK_WEBHOOK_URL=

# Example:
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# TWILIO CONFIGURATION
# =============================================================================
# Twilio Account SID (starts with AC...)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio Auth Token (keep this secret!)
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Twilio Phone Number (E.164 format: +1XXXXXXXXXX)
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# Twilio Webhook Base URL (your deployment URL for callbacks)
# For production: https://your-domain.com
# For development with ngrok: https://your-ngrok-url.ngrok.io
TWILIO_WEBHOOK_URL=https://your-domain.com

# Optional: Twilio Messaging Service SID (if using messaging service instead of phone number)
# TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Twilio Voice Recording (true to record all calls, false to disable)
TWILIO_RECORD_CALLS=true

# =============================================================================
# ARRIVY CONFIGURATION
# =============================================================================
# Arrivy API Authentication (obtain from Arrivy dashboard)
# Get your credentials at: https://app.arrivy.com/settings/integrations
ARRIVY_AUTH_KEY=your_arrivy_auth_key_here
ARRIVY_AUTH_TOKEN=your_arrivy_auth_token_here

# Arrivy Company Name (for customer tracker URLs)
# This is your company name as shown in tracker URLs
# Example: https://app.arrivy.com/live/track/{company_name}/{url_safe_id}
ARRIVY_COMPANY_NAME=your_company_name

# Arrivy Webhook Secret (for webhook signature verification)
# Set this to a secure random string and configure the same in Arrivy webhook settings
# Generate with: openssl rand -base64 32
ARRIVY_WEBHOOK_SECRET=your_webhook_secret_here

# Arrivy API Base URL (default: https://app.arrivy.com/api)
# Only change this if you're using a custom Arrivy instance
ARRIVY_BASE_URL=https://app.arrivy.com/api

# Arrivy Rate Limit (requests per second)
# Arrivy API allows up to 30 requests per minute = 0.5 requests per second
# Default: 30 (requests per minute)
ARRIVY_RATE_LIMIT=30

# =============================================================================
# REPCARD CONFIGURATION
# =============================================================================
# RepCard API Key (obtain from RepCard dashboard)
# Get your API key at: https://www.repcard.com/api-docs
REPCARD_API_KEY=your_repcard_api_key_here

# RepCard API Base URL (default: https://api.repcard.com)
# Only change this if you're using a custom RepCard instance
REPCARD_API_URL=https://api.repcard.com

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Only needed for local development
NEXT_PUBLIC_APP_URL=http://localhost:3000